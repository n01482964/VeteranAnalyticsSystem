@model List<VeteranAnalyticsSystem.Models.Survey>

<h1>Survey Database</h1>

@if (Model == null || !Model.Any())
{
    <p>No surveys found.</p>
}
else
{
    <table id="surveyTable" class="data-table display table table-striped table-bordered">
        <thead>
            <tr>
                <th>Submission Date</th>
                <th>Survey Type</th>
                <th>Comfort Zone Response</th>
                <th>Motivation Response</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var survey in Model)
            {
                <tr>
                    <td>@survey.DisplaySubmissionDate</td>
                    <td>@survey.SurveyType</td>
                    <td>@survey.ComfortZone</td>
                    <td>@survey.Rating</td>
                    <td>
                        <a asp-action="Details" asp-controller="Surveys" asp-route-id="@survey.Id" class="btn btn-sm btn-outline-primary" target="_blank">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#surveyTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                pageLength: 10
            });
        });
    </script>
}
