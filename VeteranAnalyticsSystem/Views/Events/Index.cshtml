@using VeteranAnalyticsSystem.Models.Core
@model List<Event>
@{
    ViewData["Title"] = "Event Schedule";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

<div class="container mt-4">
    <h2 class="text-center mb-4">All Events</h2>
    <table id="eventTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Location</th>
                <th>Date</th>
                <th>Participants</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var evt in Model)
            {
                <tr>
                    <td>@evt.Location</td>
                    <td>@evt.EventDate.ToShortDateString()</td>
                    <td>@evt.Veterans.Count</td>
                    <td>
                        <a href="@Url.Action("Details", "Events", new { id = evt.EventId })" class="btn btn-sm btn-outline-primary">
                            View Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#eventTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                pageLength: 10
            });
        });
    </script>
}
