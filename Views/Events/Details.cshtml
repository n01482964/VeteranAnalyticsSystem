@model VeteranAnalyticsSystem.Models.Event

<h1>@Model.EventName - @Model.EventDate.ToShortDateString()</h1>
<h2>Location: @Model.Location</h2>

<h3>Participants</h3>
@if (Model.Participants == null || Model.Participants.Count == 0)
{
        <p>No participants found for this event.</p>
}
else
{
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Gender</th>
                    <th>Branch of Service</th>
                    <th>Condition</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var veteran in Model.Participants)
            {
                        <tr>
                            <td>@veteran.FirstName</td>
                            <td>@veteran.LastName</td>
                            <td>@veteran.Gender</td>
                            <td>@veteran.BranchOfService</td>
                            <td>@veteran.Condition</td>
                        </tr>
            }
            </tbody>
        </table>
}
