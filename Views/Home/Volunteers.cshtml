@model List<VeteranAnalyticsSystem.Models.Volunteer>

<h1>Volunteers</h1>

<!-- Link to create a new volunteer -->
<a asp-action="CreateVolunteer" class="btn btn-primary">Create New Volunteer</a>

@if (Model == null || Model.Count == 0)
{
    <p>No volunteers found.</p>
}
else
{
    <table id="volunteerTable" class="data-table display">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var volunteer in Model)
            {
                <tr>
                    <td>@volunteer.FirstName</td>
                    <td>@volunteer.LastName</td>
                    <td>@volunteer.Email</td>
                    <td>@volunteer.PhoneNumber</td>
                    <td>
                        <a asp-action="EditVolunteer" asp-route-id="@volunteer.VolunteerId">Edit</a> |
                        <a asp-action="DeleteVolunteer" asp-route-id="@volunteer.VolunteerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#volunteerTable').DataTable({
                paging: true,      // Enable pagination
                searching: true,   // Enable searching
                ordering: true,    // Enable column sorting
                pageLength: 10,    // Number of rows per page
                responsive: true   // Make the table responsive
            });
        });
    </script>
}
