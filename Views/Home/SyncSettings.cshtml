@model IEnumerable<VeteranAnalyticsSystem.Models.SyncStatus>

<h2>Data Sync Settings</h2>

<table class="table">
    <thead>
        <tr>
            <th>Source</th>
            <th>Target</th>
            <th>Last Sync Time</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sync in Model)
        {
            <tr>
                <td>@sync.Source</td>
                <td>@sync.Target</td>
                <td>@sync.LastSyncTime.ToString("g")</td>
                <td>@sync.Status</td>
                <td>
                    <!-- Button to trigger modal -->
                    <button type="button" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#detailsModal">
                        View Details
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Sync Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                All data synced successfully.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
