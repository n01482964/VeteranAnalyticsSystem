@model List<VeteranAnalyticsSystem.Models.Veteran>

<h1>Veteran Database</h1>

<form method="post" asp-action="FilterVeterans" class="filter-form">
    <label for="gender">Gender:</label>
    <select name="gender" id="gender">
        <option value="">All</option>
        <option value="Male">Male</option>
        <option value="Female">Female</option>
        <option value="Other">Other</option>
    </select>

    <label for="branchOfService">Branch of Service:</label>
    <select name="branchOfService" id="branchOfService">
        <option value="">All</option>
        <option value="Army">Army</option>
        <option value="Navy">Navy</option>
        <option value="Air Force">Air Force</option>
        <option value="Marines">Marines</option>
        <option value="Coast Guard">Coast Guard</option>
    </select>

    <label for="condition">Condition:</label>
    <input type="text" name="condition" id="condition" placeholder="e.g., PTSD, Injury" />

    <label for="startDate">Enrollment Start Date:</label>
    <input type="date" name="startDate" id="startDate" />

    <label for="endDate">Enrollment End Date:</label>
    <input type="date" name="endDate" id="endDate" />

    <button type="submit">Filter</button>
</form>

@if (ViewBag.Analytics != null)
{
    var analytics = ViewBag.Analytics as Dictionary<string, object>;

    <h2>Analytics</h2>
    <ul>
        <li><strong>Total Veterans:</strong> @analytics["TotalVeterans"]</li>
        <li><strong>Average Age:</strong> @string.Format("{0:F2}", analytics["AverageAge"]) years</li>

        <li>
            <strong>Gender Distribution:</strong>
            <ul>
                @foreach (var gender in (Dictionary<string, int>)analytics["GenderDistribution"])
                {
                    <li>@gender.Key: @gender.Value</li>
                }
            </ul>
        </li>

        <li>
            <strong>Branch Distribution:</strong>
            <ul>
                @foreach (var branch in (Dictionary<string, int>)analytics["BranchDistribution"])
                {
                    <li>@branch.Key: @branch.Value</li>
                }
            </ul>
        </li>
    </ul>
}

@if (Model == null || Model.Count == 0)
{
    <p>No veterans found.</p>
}
else
{
    <table id="veteranTable" class="data-table display">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Gender</th>
                <th>Date Of Birth</th>
                <th>Branch of Service</th>
                <th>Condition</th>
                <th>Enrollment Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var veteran in Model)
            {
                <tr>
                    <td>@veteran.FirstName</td>
                    <td>@veteran.LastName</td>
                    <td>@veteran.Gender</td>
                    <td>@veteran.DateOfBirth.ToShortDateString()</td>
                    <td>@veteran.BranchOfService</td>
                    <td>@veteran.Condition</td>
                    <td>@veteran.DateOfEntry.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@section Scripts {
    <script>$(document).ready(function () {
            $('#veteranTable').DataTable({
                paging: true,      // Enable pagination
                searching: true,   // Enable searching
                ordering: true,    // Enable column sorting
                responsive: true,  // Make the table responsive
                pageLength: 10     // Set the number of rows per page
            });
        });</script>
}
